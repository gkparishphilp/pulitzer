-# admin layout
!!!strict
/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
//[if gt IE 8] <html class="no-js">
%html{ lang: :en }
	%head
		%title
			= @page_meta[:title]
		%meta{ content: @page_meta[:description], name: "description" }

		%meta{ charset: "utf-8" }
		%meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
		%meta{ content: "width=device-width, initial-scale=1, maximum-scale=1", name: "viewport" }


		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->

		= stylesheet_link_tag "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
		= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/themes/smoothness/jquery-ui.css'

		= stylesheet_link_tag "admin", media: "all", "data-turbolinks-track" => true

		= javascript_include_tag "admin"
		:javascript
			$.FroalaEditor.DEFAULTS.key = '#{Pulitzer.froala_editor_key}';

		-# = favicon_link_tag 'favicon.png'

		= csrf_meta_tags

	%body
		.container-fluid
			= render 'admin/navbar'

		.container-fluid
			= render 'application/flash'
			= yield

		= render 'admin/footer'

		= render 'pulitzer/article_admin/new_modal'
		= render 'pulitzer/page_admin/new_modal'
