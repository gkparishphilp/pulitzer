- if section.background_attachment.attached?
	%section.pulitzer_content_section.pulitzer_content_section_bg[section]{ class: section.css_classes, style: "background-image: url('#{section.background_attachment.service_url}');#{section.css_style}" }
		- if section.title.present?
			%h2
				= section.title
		= raw section.content

- elsif section.css_style.present?
	%section.pulitzer_content_section[section]{ class: section.css_classes, style: section.css_style }
		- if section.title.present?
			%h2
				= section.title
		= raw content_section.content
- else
	%section.pulitzer_content_section[section]{ class: section.css_classes }
		- if section.title.present?
			%h2
				= section.title
		= raw section.content