
.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					= link_to 'Admin', main_app.admin_index_path
				%li
					= link_to 'File Admin', unattached_blob_admin_index_path
				%li
					%strong
						#{@blob.filename}
		.col-xs-2

	= form_for @blob, url: pulitzer.unattached_blob_admin_path(@blob.id) do |f|
		.row
			.col-sm-12.col-md-6.col-md-offset-3
				.form-group
					= attachment_picture_tag(@blob, xs: '100%x', class: 'img img-responsive center-block')
				.form-group
					%label URL
					.form-control
						%a.btn{ 'data-clipboard-text' => @blob.service_url, style: 'padding:0;border:none;' }
							= @blob.service_url
							%i.fa.fa-clipboard
			.col-sm-8.col-md-6
				%h2 Specs
				.well
					.row
						.col-xs-12.col-md-6
							.form-group
								%label Filename
								.form-control= @blob.filename
						.col-xs-12.col-md-6
							.form-group
								%label Width
								.form-control #{@blob.metadata['width']}
						.col-xs-12.col-md-6
							.form-group
								%label Height
								.form-control #{@blob.metadata['height']}
						.col-xs-12.col-md-6
							.form-group
								%label Size
								.form-control #{@blob.byte_size} bytes
			.col-sm-8.col-md-6
				%h2 Metadata
				.well
					.row
						.col-xs-12.col-md-6
							.form-group
								%label Title
								= text_field_tag 'metadata[title]', @blob.metadata['title'], class: 'form-control'
						.col-xs-12.col-md-6
							.form-group
								%label Description
								= text_field_tag 'metadata[description]', @blob.metadata['description'], class: 'form-control'
						.col-xs-12.col-md-6
							.form-group
								%label Author
								= text_field_tag 'metadata[author]', @blob.metadata['author'], class: 'form-control'
						.col-xs-12.col-md-6
							.form-group
								%label Image Description (img alt attribute)
								= text_field_tag 'metadata[alt]', @blob.metadata['alt'], class: 'form-control'
						.col-xs-12
							.form-group
								%label Tags
								= text_field_tag 'tags_csv', (@blob.tags || []).join(','), class: 'form-control'

			.col-sm-12.text-right
				.form-group
					= f.submit 'Save', class: 'btn btn-primary'
