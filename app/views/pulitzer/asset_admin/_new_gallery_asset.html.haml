#new_gallery_asset_modal.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{ type: :button, 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
					&times;
				%h4.modal-title
					New Asset
			= form_for SwellMedia::Asset.new, url: swell_media.asset_manager_index_path, :html => {:multipart => true} do |f|
				= hidden_field_tag 'asset[parent_obj_id]', obj.id
				= hidden_field_tag 'asset[parent_obj_type]', obj.class.base_class.name
				= hidden_field_tag 'asset[use]', 'gallery'
				.modal-body
					.form-group
						= f.label :title
						= f.text_field :title, class: 'form-control'
					.form-group
						= f.label :file, 'File'
						= file_field_tag :file, class: 'form-control'

				.modal-footer
					%button.btn.btn-default{ type: :button, 'data-dismiss' => 'modal' }
						Close
					= f.submit 'Upload', class: 'btn btn-primary'
